@model Trip

@{
    ViewBag.Title = "Išsami maršruto informacija";
    Layout = "_Layout";
}

<div class="main-content-header container-fluid d-flex d-row justify-content-between align-items-center p-2">
    <span class="title">
        <h1>@ViewBag.Title</h1>
    </span>
    <span class="actions">
        <a href="@Url.Action("ShowTrips")" class="btn btn-secondary"><i class="fa-solid fa-angles-left"></i> Atgal į sąrašą</a>
    </span>
</div>

<div class="container-fluid d-flex justify-content-center">

    <fieldset class="border rounded shadow p-2" style="width: 40%; word-wrap: break-word;">

        <dl>
            <dt>@Html.DisplayNameFor(m => m.Route.Title)</dt>
            <dd>@Html.DisplayFor(m => m.Route.Title)</dd>
        </dl>
        <dl>
            @foreach (var voyage in Model.Voyages)
            {
                <div class="d-flex justify-content-center justify-content-between">
                    <div class="col">
                        <i class="fa-solid fa-location-dot"></i>@Html.DisplayFor(m => voyage.RouteVoyage.Departure.Name)
                    </div>
                    <div class="col">
                        <i class="fa-solid fa-clock"></i>@Html.DisplayFor(m => voyage.DepartureTime)
                    </div>
                    <div class="col d-flex justify-content-center">
                        <div>
                            <i class="fa-solid fa-bus"></i>
                        </div>
                    </div>
                    <div class="col">
                        @Html.DisplayFor(m => voyage.ArrivalTime)<i class="fa-solid fa-clock"></i>
                    </div>
                    <div class="col">
                        @Html.DisplayFor(m => voyage.RouteVoyage.Arrival.Name)<i class="fa-solid fa-location-dot"></i>
                    </div>
                </div>
            }
        </dl>
    </fieldset>
</div>
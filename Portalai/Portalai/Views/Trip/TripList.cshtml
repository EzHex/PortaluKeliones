@model IEnumerable<Trip>

@{
    ViewBag.Title = "Keliones";
    Layout = "_Layout";
}

<div class="main-content-header container-fluid d-flex d-row justify-content-between align-items-center p-2">
    <span class="title">
        <h1>@ViewBag.Title</h1>
    </span>
    <span>
        <a href="@Url.Action("ShowCreateForm")" class="btn btn-primary">Sukurti naują</a>
    </span>
</div>

<div class="d-flex justify-content-center">
    <table class="entitylist table table-striped table-hover">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Route.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartureTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalTime)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-md-start">
                    @Html.DisplayFor(modelItem => item.Route.Title)
                </td>
                <td class="text-md-start">
                    @Html.DisplayFor(modelItem => item.DepartureTime)
                </td>
                <td class="text-md-start">
                    @Html.DisplayFor(modelItem => item.ArrivalTime)
                </td>
                <td class="text-md-end">
                    <a href="@Url.Action("ShowOneTrip", new { item.Id })" class="btn btn-secondary">Išsami informacija</a>
                    <a href="@Url.Action("ShowEditForm", new { item.Id })" class="btn btn-warning">Redaguoti</a>
                    <a href="@Url.Action("ShowDeleteConfirmForm", new {item.Id})" class="btn btn-danger">Šalinti</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
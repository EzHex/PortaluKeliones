@model IEnumerable<Place>

@{
    ViewBag.Title = "Vietovių sąrašas";
    Layout = "_Layout";
}

<div class="main-content-header container-fluid d-flex d-row justify-content-between align-items-center p-2">
    <span class="title">
        <h1>@ViewBag.Title</h1>
    </span>
    <span>
        <a href="@Url.Action("PlaceCreate")" class="btn btn-primary">Sukurti naują</a>
    </span>
</div>

<div class="d-flex justify-content-center">
    <table class="entitylist table table-striped table-hover">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-md-start">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-md-end">
                    <a href="@Url.Action("PlaceInfo", item)" class="btn btn-secondary">Išsami informacija</a>
                    <a href="@Url.Action("PlaceEdit", new { item.Id })" class="btn btn-warning">Redaguoti</a>
                    <a href="@Url.Action("PlaceDelete", item)" class="btn btn-danger">Šalinti</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@model Complaint
@{
    ViewBag.Title = "Skundo šalinimas";
    Layout = "_Layout";
}

<div class="main-content-header container-fluid d-flex d-row justify-content-between align-items-center p-2">
    <span class="title">
        <h1>@ViewBag.Title</h1>
    </span>
</div>

<div class="container-fluid d-flex justify-content-center">
    @using (Html.BeginForm( null, null, FormMethod.Post,  new { style = "width:50%;word-wrap: break-word;"}))
    {
        @Html.AntiForgeryToken()

        <fieldset class="border rounded shadow p-2">
            <legend class="text-center">Ar tikrai norite šalinti šį skundą?</legend>

            <dl>
                <dt>@Html.DisplayNameFor(m => m.SubmisionDate)</dt>
                <dd>@Html.DisplayFor(m => m.SubmisionDate)</dd>
               
                <dt>@Html.DisplayNameFor(m => m.Description)</dt>
                <dd>@Html.DisplayFor(m => m.Description)</dd>
               
                <dt>@Html.DisplayNameFor(m => m.Status)</dt>
                <dd>@Html.DisplayFor(m => m.Status)</dd>
            </dl>
            
            <div class="container-fluid d-flex d-row justify-content-between align-items-center p-2">
                <span>
                    <button formaction="@Url.Action("DeleteComplaint", new { id = Model.Id })" class="btn btn-danger"><i style="padding-right: 5px" class="fa-solid fa-trash"></i>Šalinti</button>
                </span>
                <span>
                    <button formaction="@Url.Action("ShowComplaints")" class="btn btn-warning"><i></i>Atšaukti</button>
                </span>
            </div>
        </fieldset>
    }
</div>